apiVersion: autoscaling/v2beta1
kind: HorizontalPodAutoscaler
metadata:
  name: blaapp1hpa
  namespace: demo-dev31
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: DeploymentConfig
    name: blaapp1
  minReplicas: 1
  maxReplicas: 10
  metrics:
    - type: Resource
      resource:
        name: cpu
        targetAverageUtilization: 50
